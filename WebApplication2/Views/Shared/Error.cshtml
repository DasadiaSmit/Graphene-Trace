@model GrapheneTrace.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5 text-center">
    <h1 class="text-danger fw-bold">Oops! Something went wrong.</h1>
    <h4 class="text-muted mb-4">An unexpected error occurred while processing your request.</h4>

    @if (Model?.ShowRequestId ?? false)
    {
        <p>
            <strong>Request ID:</strong>
            <code>@Model.RequestId</code>
        </p>
    }

    <div class="alert alert-warning mt-4">
        <h5 class="fw-bold">Development Mode</h5>
        <p class="mb-0">
            When running in <strong>Development</strong> mode, more detailed information about the error will appear here.
            <br />
            <strong>Note:</strong> Avoid enabling Development mode in production environments, as it may expose sensitive data.
        </p>
    </div>

    <a asp-controller="Home" asp-action="Index" class="btn btn-dark mt-4">Return to Home</a>
</div>
