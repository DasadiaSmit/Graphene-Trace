@{
    ViewData["Title"] = "Patient Registration";
}

<h2>Patient Registration</h2>

<form asp-action="Register" method="post" class="form">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="FullName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" name="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" name="PasswordHash" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Create Account</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}
